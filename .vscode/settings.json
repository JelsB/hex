// Version control this file to share common VsCode settings across the team
{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "cSpell.words": ["Powertools"],
  "ruff.format.args": [
    "--config=infra/lib/graphql/resolvers/update_player_score/pyproject.toml"
  ],
  "ruff.lint.args": [
    "--config=infra/lib/graphql/resolvers/update_player_score/pyproject.toml"
  ],
  "ruff.lint.run": "onSave",
  "ruff.codeAction.fixViolation": {
    "enable": true
  }
}
